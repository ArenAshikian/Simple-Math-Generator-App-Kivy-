<MyGrid>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        ProgressBar:
            id: my_progress_bar
            value: 100
            min: 0
            max: 100
            pos_hint: {'center_x': 0.5}
            size_hint_x: 0.8

        GridLayout:
            id: inside_grid
            cols: 1
            size_hint: (1, 0.7)
        
        Button:
            id: submit_button
            text: "Submit"
            font_size: 40
            size_hint: (1, 0.2)
